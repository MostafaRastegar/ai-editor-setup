{
  // settings Cline (AI Agent)
  "cline.autoIndex": true,
  "cline.maxContextFiles": 50,
  "cline.embeddingsProvider": "local",

  // settings VS Code
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/objects/**": true,
    "**/qdrant_storage/**": true,
    "**/__pycache__/**": true,
    "**/venv/**": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/qdrant_storage": true
  },

  // performance
  "files.autoSave": "onFocusChange",
  "editor.formatOnSave": true,

  // better use
  "editor.inlineSuggest.enabled": true,
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on"
}
